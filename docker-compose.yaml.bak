version: "3.8"

services:
  db:
    image: postgres:latest
    ports:
      - ${PGPORT}:5432
    environment:
      - POSTGRES_USER=${PGUSER}
      - POSTGRES_PASSWORD=${PGPASSWORD}
      - POSTGRES_DB=${PGDATABASE}
  backend:
    depends_on:
      - db
    build: ./backend
    volumes:
      - ./backend:/.app
    ports:
      - "8000:8000"
